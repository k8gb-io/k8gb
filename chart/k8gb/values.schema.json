        "Rfc2136Opt": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "host": {
                    "format": "idn-hostname"
                },
                "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                }
            },
            "title": "Rfc2136Opt"
        },
        "Rfc2136auth": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "insecure": {
                    "type": "object",
                    "items": {
                        "$ref": "#/definitions/Rfc2136authInsecure"
                    }
                },
                "tsig": {
                    "type": "object",
                    "items": {
                        "$ref": "#/definitions/Rfc2136authTsig"
                    }
