                    "$ref": "#/definitions/k8gbLog"
                },
                "coredns": {
                    "$ref": "#/definitions/k8gbCoreDNS"
                },
                "splitBrainCheck": {
                    "type": "boolean"
                },
                "metricsAddress": {
                    "type": "string",
                    "minLength": 1
                },
                "securityContext": {
                    "$ref": "#/definitions/k8gbSecurityContext"
                },
                "exposeMetrics": {
                    "type": "boolean",
                    "default": false
                },
                "serviceMonitor": {
                    "$ref": "#/definitions/k8gbServiceMonitor"
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podLabels": {
                    "type": "object"
                }
            },
            "required": [
                "clusterGeoTag",
                "extGslbClustersGeoTags",
                "dnsZone",
                "edgeDNSServers",
                "edgeDNSZone"
            ],
            "title": "k8gb"
        },
        "k8gbLog": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "format": {
                    "enum": [
                        "simple",
                        "json"
                    ]
                },
                "level": {
                    "enum": [
                        "panic",
                        "fatal",
                        "error",
                        "warn",
                        "info",
                        "debug",
                        "trace"
                    ]
                }
            },
            "title": "Log"
        },
