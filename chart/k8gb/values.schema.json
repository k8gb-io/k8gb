        "Externaldns": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "dnsPolicy": {
                    "type": "string",
                    "minLength": 1
                },
                "extraEnv": {
                    "type": "array"
                },
                "extraVolumes": {
                    "type": "array"
