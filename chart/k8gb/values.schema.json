            "type": "object",
            "additionalProperties": false,
            "properties": {
                "kerberos-username": {
                    "type": "string",
                    "minLength": 1
                },
                "kerberos-password": {
                    "type": "string",
                    "minLength": 1
                },
                "kerberos-realm": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "title": "Rfc2136authGssTsigCreds"
