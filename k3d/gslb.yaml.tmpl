apiVersion: k3d.io/v1alpha4
kind: Simple
metadata:
  name: test-gslb$CLUSTER_INDEX
# Used by renovate
# repo: rancher/k3s
image: docker.io/rancher/k3s:v1.28.4-k3s2
agents: 1
network: k3d-action-bridge-network
ports:
  - port: $PORT_HTTP:80
    nodeFilters:
      - agent:0:direct
  - port: $PORT_HTTPS:443
    nodeFilters:
      - agent:0:direct
  - port: $PORT_PROM:30090
    nodeFilters:
      - agent:0:direct
  - port: $PORT_DNS:30053/tcp
    nodeFilters:
      - agent:0:direct
  - port: $PORT_DNS:53/udp
    nodeFilters:
      - agent:0:direct
options:
  k3d:
    disableLoadbalancer: true
  k3s:
    extraArgs:
      - arg: --disable=traefik,servicelb,metrics-server,local-storage
        nodeFilters:
          - server:*
